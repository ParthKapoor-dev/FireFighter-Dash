{
  "compilerOptions": {
    "jsx": "react-jsx", // For React 17+ projects, or use "react" for older versions
    "module": "esnext",
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["@types/woosmap.map"],
    "noEmit": true
  },
  "include": ["src"]
}
